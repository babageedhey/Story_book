<div class="row">
    <div class="col s12 m9">
        <h4 class="show-head">{{story.title}}</h4>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
                {{{story.body}}}
            </div>
            <br>
            <div class="card-action">
                <a href="/stories/edit/{{story.id}}" class="btn left-align"><i class="fa fa-pencil"></i> Edit</a>
                        <form action="/stories/{{story.id}}?_method=DELETE" id="delete-form" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red right-align"><i class="fa fa-trash"></i> Delete</button>
                        </form>
            </div>
        </div>
        {{#if story.allowComments}}
            <div class="card">
                <div class="card-content">
                    <span class="card-title"> Comments</span>
                    {{#if user}}
                        <form action="/stories/comment/{{story.id}}" method="POST">
                            <div class="input-field">
                                <textarea name="commentBody" class="materialize-textarea" cols="30" rows="10"></textarea>
                                <label for="commentBody"> Add Comment</label>
                                <input type="submit" value="Submit" class="btn">
                            </div>
                        </form>
                    {{else}}
                        <p>Please<a href="/auth/google"> Log in </a>to Leave a Comment</p>
                    {{/if}}
                </div>
            </div>
        {{/if}}
    </div>
    <div class="col s12 m3">
        <h4 class="show-head">Author</h4>
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">
                    {{story.user.firstName}} {{story.user.lastName}}
                </span>
                <img src="{{story.user.image}}" alt="Author image" class="circle responsive-img">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user.id}}">More Stories from {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
